{
  "name": "datetime",
  "version": "1.0",
  "description": "Build a Datetime Extension!",
  "permissions": ["tabs"],
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/chat"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon.png"
    },
    "default_title": "Getting Started Example"
  },
  "icons": {
    "128": "images/icon.png"
  }
}
